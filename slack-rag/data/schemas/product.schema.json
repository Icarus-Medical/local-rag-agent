{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Schema",
  "type": "object",
  "properties": {
    "product_id": {
      "type": "string",
      "description": "Unique identifier for the product."
    },
    "name": {
      "type": "string",
      "description": "The name of the product."
    },
    "description": {
      "type": "string",
      "description": "A brief description of the product."
    },
    "category": {
      "type": "string",
      "description": "The category to which the product belongs."
    },
    "intents": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "List of intents associated with the product."
      }
    },
    "synonyms": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Synonyms for the product to aid in query matching."
      }
    },
    "triggers": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Trigger phrases that can initiate intents related to the product."
      }
    }
  },
  "required": ["product_id", "name", "description", "category", "intents"]
}